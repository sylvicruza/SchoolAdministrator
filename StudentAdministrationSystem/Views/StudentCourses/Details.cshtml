@model StudentAdministrationSystem.Models.Enrollment

@{
    ViewData["Title"] = "Details";
}
<h1 class="h3 mb-2 text-gray-800">Details</h1>
<p class="mb-4">Student Courses</p>


<div class="card shadow mb-12">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Student Details</h6>
    </div>
    <div class="card-body">
    <dl class="row">
       
        <dt class = "col-sm-2">
            Student
        </dt>
        <dd class = "col-sm-10">
                @ViewBag.StudentCourses.Student.FirstName   @ViewBag.StudentCourses.Student.LastName
        </dd>
            <dt class="col-sm-2">
              StudentNumber
            </dt>
            <dd class="col-sm-10">
                @ViewBag.StudentCourses.Student.StudentNumber
            </dd>
        <dt class = "col-sm-2">
            Programme
        </dt>
        <dd class = "col-sm-10">
                @ViewBag.StudentCourses.DegreeProgramme.Title
        </dd>
            <dt class="col-sm-2">
                Programme Code
            </dt>
            <dd class="col-sm-10">
                @ViewBag.StudentCourses.DegreeProgramme.Code
            </dd>
    </dl>
</div>
</div>
<div class="card shadow mb-12">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Module Details</h6>
        </div>
        <div class="card-body">
        <dl class="row">
            @foreach (var item in ViewBag.StudentCourses.Course)
            {


                <dt class="col-sm-4">
                    (@item.Code) @item.Name
                </dt>
                <dd class="col-sm-4">
                    @item.Type
                </dd>
                <dd class="col-sm-4">
                    <a asp-controller="CourseModules" asp-action="Details" asp-route-id=" @item.Id" class="btn btn-info  btn-sm">
                        <i class="fas fa-eye"> </i> View
                    </a>
                    <a asp-controller="CourseModules" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary  btn-sm">
                        <i class="fas fa-pen"> </i> Edit
                    </a>

                    <a asp-controller="CourseModules" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger  btn-sm">
                        <i class="fas fa-trash"> </i> Delete
                    </a>

                </dd>

            }
        </dl>
            

</div>
</div>
<div class="card shadow mb-12">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Assessment Details</h6>
            </div>
            <div class="card-body">

                 <dl class="row">
            @foreach (var item in ViewBag.StudentCourses.Info)
            {


                <dt class="col-sm-4">
                                        @item.AssessmentName         (@item.CourseName)
                                    </dt>
                <dd class="col-sm-4">
                                        @item.Marks
                                    </dd>
                <dd class="col-sm-4">
                                    <a asp-controller="Assessments" asp-action="Details" asp-route-id=" @item.Id" class="btn btn-info  btn-sm">
                                            <i class="fas fa-eye"> </i> View
                                        </a>
                                <a asp-controller="Assessments" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary  btn-sm">
                                            <i class="fas fa-pen"> </i> Edit
                                        </a>

                                <a asp-controller="Assessments" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger  btn-sm">
                                            <i class="fas fa-trash"> </i> Delete
                                        </a>

                                    </dd>
                                 }
                               </dl>
           

                <div>
                    @*<a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |*@
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>

            
            </div>




