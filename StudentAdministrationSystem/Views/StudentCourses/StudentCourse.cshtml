@model IEnumerable<StudentAdministrationSystem.Models.Enrollment>

@{
    ViewData["Title"] = "ListView";
}
<h1 class="h3 mb-2 text-gray-800">Index</h1>



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List of Students</h6>
    </div>
   <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


                <thead>
                    <tr>
                        <th>
                            StudentNumber
                        </th>
                        <th>
                         FirstName
                        </th>
                        <th>
                           LastName
                        </th>
                        <th>
                      DegreeProgramme
                        </th>
                        <th>Assign Module</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.AllStudents)
                    {
                        <tr>
                            <td>
                                @item.StudentNumber
                            </td>
                            <td>
                                @item.FirstName
                            </td>
                            <td>
                                @item.LastName
                            </td>
                          
                            <td>
                                @item.DegreeProgramme.Title
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info  btn-sm">
                                    <i class="fas fa-eye"> </i> View
                                </a>
                                <a asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary  btn-sm">
                                    <i class="fas fa-pen"> </i> Assign Module
                                </a>

                                


                                

                           
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}