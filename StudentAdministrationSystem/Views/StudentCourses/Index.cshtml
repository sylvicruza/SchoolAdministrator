@model IEnumerable<StudentAdministrationSystem.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<h1 class="h3 mb-2 text-gray-800">ALL STUDENT ASSIGNED TO MODULE</h1>



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List of Student Assigned Courses</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


    <thead>
        <tr>
          
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Student.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Student.LastName)
                        </th>
            <th>
                @Html.DisplayNameFor(model => model.DegreeProgramme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseModule)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentNumber)
            </td>
             <td>
                                @Html.DisplayFor(modelItem => item.Student.FirstName)
            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.LastName)
                            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeProgramme.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseModule.CourseTitle)
            </td>
            <td>

                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info  btn-sm">
                                    <i class="fas fa-eye"> </i> View
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary  btn-sm">
                                    <i class="fas fa-pen"> </i> Edit
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger  btn-sm">
                                    <i class="fas fa-trash"> </i> Delete
                                </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
