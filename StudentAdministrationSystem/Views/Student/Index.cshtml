@model IEnumerable<StudentAdministrationSystem.Models.Student>

@{
    ViewData["Title"] = "Index";
}
<h1 class="h3 mb-2 text-gray-800">Index</h1>
<p class="mb-4">
    <a asp-action="Create" class="btn btn-primary btn-icon-split btn-sm">
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-right"></i>
        </span>
        <span class="text">Create New</span>
    </a>
</p>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List of Students</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">


    <thead>
        <tr>
            <th>
               StudentNumber
            </th>
            <th>
               Name
            </th>
            
            <th>
              Email
            </th>
          
           
            <th>
                Cohort
            </th>
           
            <th>
               Programme
            </th>
                        <th>
                            Status
                        </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
                    @foreach (var item in ViewBag.student)
                    {
        <tr>
                <td>
                    @item.Student.StudentNumber
                </td>
            <td>
                                @item.Student.FirstName  @item.Student.LastName
            </td>
           
            <td>
                @item.Student.Email
            </td>
          
           
            <td>
                @item.Student.Cohort
            </td>
           
            <td>
                @item.Student.DegreeProgramme.Title
            </td>
                            @if (item.IsEnrolled)
                            {
                                <td class=" text-sm-left font-weight-bold text-success text-uppercase mb-1">
                                    ENROLLED
                                </td>
                            }
                            else
                            {
                                <td class=" text-sm-left font-weight-bold text-danger text-uppercase mb-1">
                                    NOT ENROLLED
                                </td>
                            }
                           
            <td>
                                <a asp-action="Details" asp-route-id="@item.Student.Id" class="btn btn-info  btn-sm">
                                    <i class="fas fa-eye"> </i> View
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Student.Id" class="btn btn-primary  btn-sm">
                                    <i class="fas fa-pen"> </i> Edit
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.Student.Id" class="btn btn-danger  btn-sm">
                                    <i class="fas fa-trash"> </i> Delete
                                </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>

