@model IEnumerable<StudentAdministrationSystem.Models.CourseModule>

@{
    ViewData["Title"] = "Index";
}
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Index</h1>
<p class="mb-4">
    <a asp-action="Create" class="btn btn-primary btn-icon-split btn-sm">
        <span class="icon text-gray-600">
            <i class="fas fa-arrow-right"></i>
        </span>
        <span class="text">Create New</span>
    </a>
</p>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">List of Modules</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Programme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseCode)
            </th>
            <th>
                Overall Mark
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseType)
            </th>
           
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Programme.Title)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseCode)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marks)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseType)
            </td>
           
            <td>
                                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info  btn-sm">
                                    <i class="fas fa-eye"> </i> View
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary  btn-sm">
                                    <i class="fas fa-pen"> </i> Edit
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger  btn-sm">
                                    <i class="fas fa-trash"> </i> Delete
                                </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
